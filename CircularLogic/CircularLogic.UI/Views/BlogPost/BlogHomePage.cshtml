@model List<CircularLogic.UI.Models.BlogPostViewModel>

@{
    ViewBag.Title = "BlogHomePage";
    Layout = "~/Views/Shared/_BlogPagesView.cshtml";
}

<h2>The Dev's Round Table</h2>

@for (int i = 0; i < Model.Count; i++)
{
    if (i%2 == 0)
    {
        <div class="row tile-row-space"></div>
    }


    if ((i%2 == 0) && (i <= Model.Count - 2))
    {
        <div class="row">
            <div class="col-md-4 tile-spacer">
                @Html.Partial("_BlogTilePartial", Model[i])
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-4 tile-spacer">
                @Html.Partial("_BlogTilePartial", Model[i+1])
            </div>
        </div>
        
    }

    if ((i%2 == 0) && (i == Model.Count - 1) && (Model.Count%2 != 0))
    {
        <div class="row">
            <div class="col-md-4 tile-spacer">
                @Html.Partial("_BlogTilePartial", Model[i])
            </div>
        </div>
    }

    if (i == 9)
    {
        break;
    }
}