@model CircularLogic.Models.StaticPage

@{
    ViewBag.Title = "DeleteStaticPage";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete Static Page</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HtmlContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HtmlContent)
        </dd>

        <dt>
            @Model.Image.Name
        </dt>

        <dd>
            <img src="@Model.Image.ImageData" />
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteStaticPage", "StaticPage", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.StaticID)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Cancel", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-danger" })
        </div>
    }
</div>