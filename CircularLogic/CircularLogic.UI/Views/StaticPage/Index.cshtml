@model IEnumerable<CircularLogic.Models.StaticPage>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Static Pages</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HtmlContent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HtmlContent)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateStaticPage", new { id = item.StaticID }) |
                @Html.ActionLink("Details", "ViewStaticPage", new { id = item.StaticID }) |
                @Html.ActionLink("Delete", "DeleteStaticPage", new { id = item.StaticID })
            </td>
        </tr>
    }
</table>