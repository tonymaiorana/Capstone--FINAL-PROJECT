<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dev's Round Table</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href="~/Content/tile.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery.share.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color: #DCDCDC; min-height: 100%;">
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Circular Logic", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Blog", "BlogHomePage", "BlogPost")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    <div class="row">
        <div class="col-md-1" style="background-color: #A9A9A9; width: 82px; min-height: 100%;">
            <div id="SocialShare" class="col-md-1" lass="share-affix" style="left: 0px; right: auto; top: 65%">
            </div>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
        <div class="col-md-2" style="background-color: #A9A9A9;"></div>
    </div>
    <div class="row">
        <hr />
        <footer>
            <p>@DateTime.Now.ToShortDateString() - Circular Logic &copy;</p>
        </footer>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/app/jquery.share.js"></script>
<script type="text/javascript">
    $("img").error(function () {
        $(this).hide();
    });

    $('#SocialShare')
        .share({
            networks: ['twitter', 'facebook', 'googleplus'],
            orientation: 'vertical',
            theme: 'square',
            urlToShare: '@Request.Url.AbsoluteUri',
            affix: 'left center'
        });
</script>
@RenderSection("scripts", required: false)
</body>
</html>
