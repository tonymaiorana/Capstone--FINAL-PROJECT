@using CircularLogic.Models
@model CircularLogic.UI.Models.AdminIndexVM
@{
    ViewBag.Title = "Index";
}

<h2>Administrator Dashboard</h2>




<div id="exTab3" class="container">
    <ul class="nav nav-pills">
        <li class="active">
            <a href="#1" data-toggle="tab">Post Queue</a>
        </li>
        <li>
            <a href="#2" data-toggle="tab">Category Management</a>
        </li>
        <li>
            <a href="#3" data-toggle="tab">User Management</a>
        </li>
    </ul>

    <div class="tab-content clearfix">
        <div class="tab-pane active" id="1">
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                                New Blog Posts
                            </a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>Title</td>
                                        <td>Author</td>
                                        <td>Date Submitted</td>
                                        <td>Approve</td>
                                        <td>Deny</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (BlogPost bp in Model.BlogPosts)
                                {
                                    <tr>
                                        <td>@bp.Title</td>
                                        <td>@bp.UserID</td>
                                        <td>@bp.CreationTime.Value.ToShortDateString()</td>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                            <button type="submit">Submit</button>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
                                Edit Requests
                            </a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse">
                        <div class="panel-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>Title</td>
                                        <td>Author</td>
                                        <td>Date Submitted</td>
                                        <td>Approve</td>
                                        <td>Deny</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (BlogPost bp in Model.BlogPosts)
                                {
                                    <tr>
                                        <td>@bp.Title</td>
                                        <td>@bp.UserID</td>
                                        <td>@bp.CreationTime.Value.ToShortDateString()</td>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                            <button type="submit">Submit</button>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                                Delete Requests
                            </a>
                        </h4>
                    </div>
                    <div id="collapse3" class="panel-collapse collapse">
                        <div class="panel-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>Title</td>
                                        <td>Author</td>
                                        <td>Date Submitted</td>
                                        <td>Approve</td>
                                        <td>Deny</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (BlogPost bp in Model.BlogPosts)
                                    {
                                    <tr>
                                        <td>@bp.Title</td>
                                        <td>@bp.UserID</td>
                                        <td>@bp.CreationTime.Value.ToShortDateString()</td>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <button type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <div class="tab-pane" id="2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">Categories</h4>
                    </div>
                    <div class="panel-body">
                        <table>
                            <thead>
                            <tr>
                                <td>Category Name</td>
                                <td>Blogs in Category</td>
                                <td>Action</td>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (KeyValuePair<Category, int> c in Model.CategoryCountDictionary)
                            {
                                <td>@c.Key.Name</td>
                                <td>@c.Value</td>
                                <td>
                                    <button class="btn btn-danger btn-sm catDelete" type="submit" id=@Html.Raw(c.Key.CategoryID)><span class="glyphicon glyphicon-trash"></span></button>
                                </td>
                            }
                            </tbody>
                        </table>
                    </div>
                        @*<div class="panel-footer">Panel Footer</div>*@
                </div>
            </div>
            <div class="tab-pane" id="3">
                <h3>Coming Soon</h3>
            </div>
        </div>
    </div>

@section scripts{
    <script type="text/javascript">
        var uri = "../api/categoryAPI";
        $(document).ready(function() {
            $('.catDelete').click(function() {
                var t = this.id;
                var OtherPost = {
                    id: t,
                    type: 'DELETE'
                }
                $.post(uri, OtherPost)
                    .done(function() {
                        alert("Success");
                        $(this).closest('tr').remove();
                    })
                    .fail(function(jqXhr, status, err) {
                        alert((status + ' - ' + err));
                    });
            });
        });

    </script>
    @*
        -script to prevent allow and deny being checked at the same time
        -build form around allow and deny
        -add link to view a blog post
        *@
}


